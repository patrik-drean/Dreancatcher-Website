@model Project1.Models.Emailer
@{
    ViewBag.Title = "Contact Me";
}

<h2></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @ViewBag.Name

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
        <div class="form-group">
            @Html.LabelFor(model => model.EmailerName, htmlAttributes: new { @class = "control-label col-md-2 Label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EmailerName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmailerName, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.EmailAddress, htmlAttributes: new { @class = "control-label col-md-2 Label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
             @Html.LabelFor(model => model.EmailSubject, htmlAttributes: new { @class = "control-label col-md-2 Label" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.EmailSubject,
                  new List<SelectListItem> {
                       new SelectListItem { Value = "Request an appointment" , Text = "Request an appointment" },
                       new SelectListItem { Value = "Get more information" , Text = "Get more information" },
                       new SelectListItem { Value = "Other" , Text = "Other" }
                    },
                  new { @class = "control-label col-md-4 SubjectItem" })
            </div>
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.EmailMessage, htmlAttributes: new { @class = "control-label col-md-1 Label" })
           
            <br /><br />
            
            @Html.ValidationMessageFor(model => model.EmailMessage, "", new { @class = "text-danger", @style ="margin:10px 0;" })<br />
          
            <div class="col-md-10">
                @Html.EditorFor(model => model.EmailMessage, new { htmlAttributes = new { @class = "TextAreaForm", @rows = 8 } })

            </div>
        </div>

        <br /><br />
        <div class="form-group">
            <div class="col-md-offset-1 col-md-2">
                <input type="submit" value="Send Message" class="btn btn-primary" />
            </div>
        </div>
    </div>
}