@model Project1.Models.Blog

@{
                /**/

                ViewBag.Title = "Dreancatcher Wellness";

}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img class="d-block img-fluid" src="~/Content/Images/Landing1.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block LandingSlide">
                <h2>"The natural healing force in each one of us is the greatest force in getting well.” <br />-Hippocrates</h2>
                <br />
                @Html.ActionLink("Learn more about Foot Zones", "FootZone", "Home", null, new { @class = "btn btn-primary" })
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid" src="~/Content/Images/Landing2.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block LandingSlide" id="LandingSlide2">

                <h1>Ready for your Foot Zone?</h1>
                <br />
                @Html.ActionLink("Contact me now!", "Contact", "Home", null, new { @class = "btn btn-primary" })
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid" src="~/Content/Images/@Model.HeaderImage" " alt="Third slide">
            <div class="carousel-caption d-none d-md-block LandingSlide" id="LandingSlide3">
                <h1>"@Model.Title"</h1>
                <br />
                @Html.ActionLink("Check out my blog", "Index", "Blog", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>